			</div>

			<ul class="box-info">
				<li>
					<i class='bx bxs-badge-check' ></i>
					<span class="text">
						<h3 id="status-text-online"> {{ onlineNum|raw }}</h3>
						<p>Online websites</p>
					</span>
				</li>
				<li>
					<i class='bx bxs-error' ></i>
					<span class="text">
						<h3 id="status-text-error"> {{ errorNum|raw }}</h3>
						<p>Errors detect</p>
					</span>
				</li>
			</ul>


			<div class="table-data">
				<div class="order">
					<div class="head">
						<h3>Current Status</h3>
						<i class='bx bx-search' ></i>
						<i class='bx bx-filter' ></i>
					</div>
					<table>
						<thead>
							<tr>
								<th>Website</th>
								<th>Date Order</th>
								<th>Status</th>
							</tr>
						</thead>
						<tbody id="status-table">
							{{ UrlStatus|raw }}
						</tbody>
					</table>
				</div>
